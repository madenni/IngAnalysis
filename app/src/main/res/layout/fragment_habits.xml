<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HabitsFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="44dp"
        android:text="Ваши особенности питания"
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/CHdiabetes"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="116dp"
        android:buttonTint="@color/yellow"
        android:text="Диабет"
        android:textColor="#606267"
        android:textSize="20sp"
        app:checkedState="unchecked"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.412"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/CHvegan"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:buttonTint="@color/yellow"
        android:text="Веганство"
        android:textColor="#606267"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.412"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CHveget" />

    <CheckBox
        android:id="@+id/CHveget"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:buttonTint="@color/yellow"
        android:text="Вегетарианство"
        android:textColor="#606267"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.412"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CHallergy" />

    <CheckBox
        android:id="@+id/CHallergy"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:buttonTint="@color/yellow"
        android:text="Склонность к аллергиям"
        android:textColor="#606267"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.412"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CHdiabetes" />

    <CheckBox
        android:id="@+id/CHadditives"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:buttonTint="@color/yellow"
        android:text="Показывать пищевые добавки"
        android:textColor="#606267"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.412"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CHvegan" />

    <Button
        android:id="@+id/del"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:backgroundTint="#85FB4E4E"
        android:text="Удалить аккаунт"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CHadditives"
        app:layout_constraintVertical_bias="0.787" />

    <Button
        android:id="@+id/imageButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:text="СОХРАНИТЬ"
        app:layout_constraintBottom_toTopOf="@+id/del"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CHadditives"
        app:layout_constraintVertical_bias="0.079" />

</androidx.constraintlayout.widget.ConstraintLayout>